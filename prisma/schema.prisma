// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id           String        @id @default(uuid())
  title        String
  releaseDate  DateTime
  runtime      Int? /// minutes
  story        String
  OfficialSite OfficialSite?
  Staff        Staff[]
  Actor        Actor[]
  Company      Company[]
  Category     Category[]
}

model Actor {
  id     String  @id @default(uuid())
  jfdbId String? @unique
  name   String
  Movie  Movie[]
}

model Occupation {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  Staff Staff[]
}

model Staff {
  id         String       @id @default(uuid())
  name       String
  Occupation Occupation[]
  Movie      Movie[]
}

model Company {
  id    String  @id @default(uuid())
  name  String
  Movie Movie[]
}

model OfficialSite {
  id      String @id @default(uuid())
  movie   Movie  @relation(fields: [movieId], references: [id])
  movieId String
  link    String
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  Movie Movie[]
}
